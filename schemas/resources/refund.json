{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Get Refund Details by ID",
                        "value": "refund.getRefundByRefundId",
                        "description": "Get refund details using the refund ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "refund"
                        }
                    ]
                }
            }
        }
    ],
    "getRefunds": {
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter refunds created after this time.",
                    "displayName": "From",
                    "displayType": "datetime",
                    "placeholder": "Select start date and time"
                },
                "name": "from"
            },
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter refunds created before this time.",
                    "displayName": "To",
                    "displayType": "datetime",
                    "placeholder": "Select end date and time"
                },
                "name": "to"
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/refunds",
            "qs": {
                "from": "{{parameters.from}}",
                "to": "{{parameters.to}}"
            },
            "pagination": {
                "type": "offset",
                "default": {
                    "count": 100,
                    "skip": 0
                },
                "qs": {
                    "count": "{{pagination.count}}",
                    "skip": "{{pagination.skip}} + {{response.data.count}}"
                },
                "condition": "{{response.data.count}} >= 0"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data.items}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "getRefundByRefundId": {
        "parameters": [
            {
                "name": "refundId",
                "meta": {
                    "displayName": "Refund ID",
                    "displayType": "text",
                    "placeholder": "Enter a refund ID (for example: rfnd_00001)",
                    "description": "Get a refund by its ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/refunds/",
            "transform": {
                "url": "function transformURL(){var refundId=(typeof parameters!=='undefined'&&parameters&&parameters.refundId!=null)?parameters.refundId:'{{parameters.refundId}}';refundId=String(refundId).trim().replace(/^\\\"|\\\"$/g,'');if(!refundId)throw new Error('Invalid refundId');return (url.endsWith('/')?url:url+'/')+encodeURIComponent(refundId);}return transformURL();",
                "error": "const obj = { message: error.message === 'undefined'  ? error.description : error.message, code: error && error.code != null ? error.code : null }; return obj;"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response?.data}}",
                "error": {
                    "description": "{{response.data.error.description}}",
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}