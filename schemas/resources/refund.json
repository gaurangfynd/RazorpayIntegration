{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select An Operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch All Refunds",
                        "value": "refund.fetchRefunds",
                        "description": "Fetch details of all refunds."
                    },
                    {
                        "label": "Fetch Refund Details By ID",
                        "value": "refund.fetchRefundByRefundId",
                        "description": "Fetch refund details using the refund ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "refund"
                        }
                    ]
                }
            }
        }
    ],
    "fetchRefunds": {
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter refunds created after this time.",
                    "displayName": "From",
                    "displayType": "datetime",
                    "placeholder": "Select Start Date And Time"
                },
                "name": "from"
            },
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter refunds created before this time.",
                    "displayName": "To",
                    "displayType": "datetime",
                    "placeholder": "Select End Date And Time"
                },
                "name": "to"
            },
            {
                "name": "count",
                "meta": {
                    "displayName": "Number Of Refunds",
                    "displayType": "number",
                    "placeholder": "Enter Count (1â€“100)",
                    "description": "Number of refunds to fetch (default: 10, max: 100).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "skip",
                "meta": {
                    "displayName": "Number Of Refunds To Skip",
                    "displayType": "number",
                    "placeholder": "Enter Offset (Skip)",
                    "description": "Number of refunds to skip (default: 0).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "qs": {
                "count": "{{parameters.count}}",
                "skip": "{{parameters.skip}}",
                "from": "{{parameters.from}}",
                "to": "{{parameters.to}}"
            },
            "url": "https://api.razorpay.com/v1/refunds",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response?.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            },
            "transform": {
                "qs": "const params = { ...qs }; const fromRaw = \"{{parameters.from}}\"; const toRaw = \"{{parameters.to}}\"; const clean = v => v && v !== 'undefined' && v !== 'null' && v.trim() !== '' ? v.trim() : null; const from = clean(fromRaw); const to = clean(toRaw); if (from) { const ts = new Date(from).getTime(); if (!isNaN(ts)) params.from = Math.floor(ts / 1000); } if (to) { const ts = new Date(to).getTime(); if (!isNaN(ts)) params.to = Math.floor(ts / 1000); } return params;"
            }
        }
    },
    "fetchRefundByRefundId": {
        "parameters": [
            {
                "name": "refundId",
                "meta": {
                    "displayName": "Refund ID",
                    "displayType": "text",
                    "placeholder": "Enter A Refund ID (For Example: rfnd_00001)",
                    "description": "Fetch a refund by its ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/refunds/",
            "transform": {
                "url": "function transformURL() {\n  var rid = (typeof parameters !== 'undefined' && parameters && parameters.refundId != null)\n    ? parameters.refundId\n    : '{{parameters.refundId}}';\n\n  var refundId = rid;\n\n  if (refundId && typeof refundId === 'object') {\n    refundId = refundId.value || refundId.id || refundId.refundId || (refundId.data && (refundId.data.value || refundId.data.id || refundId.data.refundId));\n  }\n\n  if (typeof refundId === 'string') {\n    var raw = refundId.trim().replace(/^\"|\"$/g, '');\n    if ((raw[0] === '{' && raw[raw.length - 1] === '}') || (raw[0] === '[' && raw[raw.length - 1] === ']')) {\n      try {\n        var obj = JSON.parse(raw);\n        if (Array.isArray(obj)) obj = obj[0];\n        refundId = obj && typeof obj === 'object'\n          ? obj.value || obj.id || obj.refundId || (obj.data && (obj.data.value || obj.data.id || obj.data.refundId)) || raw\n          : raw;\n      } catch (e) {\n        refundId = raw;\n      }\n    } else {\n      refundId = raw;\n    }\n  }\n\n  if (!refundId || refundId === '[object Object]') throw new Error('Invalid refundId');\n\n  return (url.endsWith('/') ? url : url + '/') + encodeURIComponent(String(refundId));\n}\nreturn transformURL();",
                "error": "const obj = { message: error.message === 'undefined'  ? error.description : error.message, code: error && error.code != null ? error.code : null }; return obj;"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response?.data}}",
                "error": {
                    "description": "{{response.data.error.description}}",
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}