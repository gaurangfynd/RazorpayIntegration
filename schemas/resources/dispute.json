{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch all disputes",
                        "value": "dispute.fetchDisputes",
                        "description": "Fetch all disputes raised by customers."
                    },
                    {
                        "label": "Fetch dispute details by ID",
                        "value": "dispute.fetchDisputeByDisputeId",
                        "description": "Fetch dispute details using the dispute ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "dispute"
                        }
                    ]
                }
            }
        }
    ],
    "fetchDisputes": {
        "parameters": [
            {
                "name": "count",
                "meta": {
                    "displayName": "Number of disputes",
                    "displayType": "number",
                    "placeholder": "Enter the number of disputes",
                    "description": "Enter the number of disputes you want to fetch. Default value is 10, maximum value is 100.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "skip",
                "meta": {
                    "displayName": "Number of disputes to skip",
                    "displayType": "number",
                    "placeholder": "Enter the number of disputes to skip",
                    "description": "Enter the number of disputes to be skipped, default value is 0.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "qs": {
                "count": "{{parameters.count}}",
                "skip": "{{parameters.skip}}"
            },
            "url": "https://api.razorpay.com/v1/disputes",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "fetchDisputeByDisputeId": {
        "parameters": [
            {
                "name": "disputeId",
                "meta": {
                    "displayName": "Dispute ID",
                    "displayType": "text",
                    "placeholder": "Enter a dispute ID",
                    "description": "Enter the dispute ID you want to fetch details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/disputes/{{parameters.disputeId}}",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}