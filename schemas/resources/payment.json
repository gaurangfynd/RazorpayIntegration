{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch all payments",
                        "value": "payment.fetchPayments",
                        "description": "Fetch payments."
                    },
                    {
                        "label": "Fetch payment details by ID",
                        "value": "payment.fetchPaymentByPaymentId",
                        "description": "Fetch payment details using the payment ID."
                    },
                    {
                        "label": "Fetch card details for a payment",
                        "value": "payment.fetchCardDetailsOfPayment",
                        "description": "Fetch card details for a payment."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "payment"
                        }
                    ]
                }
            }
        }
    ],
    "fetchPayments": {
        "parameters": [
            {
                "name": "count",
                "meta": {
                    "displayName": "Number of payments",
                    "displayType": "number",
                    "placeholder": "Enter the number of payments",
                    "description": "Enter the number of payments you want to fetch. Default value is 10, Maximum value is 100.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "skip",
                "meta": {
                    "displayName": "Number of payments to skip",
                    "displayType": "number",
                    "placeholder": "Enter the number of payments to skip",
                    "description": "Enter the number of records to be skipped while fetching the payments.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            }
        ],
        "definition": {
            "qs": {
                "count": "{{parameters.count}}",
                "skip": "{{parameters.skip}}"
            },
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.data.error.code}}"
                }
            }
        }
    },
    "fetchPaymentByPaymentId": {
        "parameters": [
            {
                "name": "paymentId",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID",
                    "description": "Enter the payment ID you want to fetch details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments/{{parameters.paymentId}}",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.data.error.code}}"
                }
            }
        }
    },
    "fetchCardDetailsOfPayment": {
        "parameters": [
            {
                "name": "paymentId",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID",
                    "description": "Enter the payment ID you want to fetch card details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments/{{parameters.paymentId}}/card",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.data.error.code}}"
                }
            }
        }
    }
}