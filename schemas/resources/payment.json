{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Get All Payments",
                        "value": "payment.getPayments",
                        "description": "Get a list of payments with optional filters (from, to)."
                    },
                    {
                        "label": "Get Payment Details by ID",
                        "value": "payment.getPaymentByPaymentId",
                        "description": "Get payment details using the payment ID."
                    },
                    {
                        "label": "Get Card Details for a Payment",
                        "value": "payment.getCardDetailsOfPayment",
                        "description": "Get card details for a payment."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "payment"
                        }
                    ]
                }
            }
        }
    ],
    "getPayments": {
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter payments created after this time.",
                    "displayName": "From",
                    "displayType": "datetime",
                    "placeholder": "Select start date and time"
                },
                "name": "from"
            },
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter payments created before this time.",
                    "displayName": "To",
                    "displayType": "datetime",
                    "placeholder": "Select end date and time"
                },
                "name": "to"
            }
        ],
        "definition": {
            "qs": {
                "from": "{{parameters.from}}",
                "to": "{{parameters.to}}"
            },
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "pagination": {
                "type": "offset",
                "default": {
                    "count": 100,
                    "skip": 0
                },
                "qs": {
                    "count": "{{pagination.count}}",
                    "skip": "{{pagination.skip}} + {{response.data.count}}"
                },
                "condition": "{{response.data.count}} >= 0"
            },
            "response": {
                "output": "{{response.data.items}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "getPaymentByPaymentId": {
        "parameters": [
            {
                "name": "paymentId",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID (for example: pay_00001)",
                    "description": "Get a payment by its ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments/",
            "transform": {
                "url": "function transformURL(){var paymentId=(typeof parameters!=='undefined'&&parameters&&parameters.paymentId!=null)?parameters.paymentId:'{{parameters.paymentId}}';paymentId=String(paymentId).trim().replace(/^\\\"|\\\"$/g,'');if(!paymentId)throw new Error('Invalid paymentId');return (url.endsWith('/')?url:url+'/')+encodeURIComponent(paymentId);}return transformURL();"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "getCardDetailsOfPayment": {
        "parameters": [
            {
                "name": "paymentId",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID (for example: pay_00001)",
                    "description": "Get card details for a payment using the payment ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/payments/",
            "transform": {
                "url": "function transformURL(){var paymentId=(typeof parameters!=='undefined'&&parameters&&parameters.paymentId!=null)?parameters.paymentId:'{{parameters.paymentId}}';paymentId=String(paymentId).trim().replace(/^\\\"|\\\"$/g,'');if(!paymentId)throw new Error('Invalid paymentId');return (url.endsWith('/')?url:url+'/')+encodeURIComponent(paymentId)+'/card';}return transformURL();"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}