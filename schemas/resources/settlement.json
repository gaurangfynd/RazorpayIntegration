{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch all settlements",
                        "value": "settlement.fetchSettlements",
                        "description": "Fetch details of all settlements."
                    },
                    {
                        "label": "Fetch settlement details by ID",
                        "value": "settlement.fetchSettlementBySettlementId",
                        "description": "Fetch settlement details using the settlement ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "settlement"
                        }
                    ]
                }
            }
        }
    ],
    "fetchSettlements": {
        "parameters": [],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/settlements",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "fetchSettlementBySettlementId": {
        "parameters": [
            {
                "name": "settlementId",
                "meta": {
                    "displayName": "Settlement ID",
                    "displayType": "text",
                    "placeholder": "Enter a settlement ID",
                    "description": "Enter the settlement ID you want to fetch details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/settlements/{{parameters.settlementId}}",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}