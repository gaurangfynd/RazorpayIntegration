{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Get All Invoices",
                        "value": "invoice.getInvoices",
                        "description": "Get details of all invoices."
                    },
                    {
                        "label": "Get Invoice Details by ID",
                        "value": "invoice.getInvoiceByInvoiceId",
                        "description": "Get invoice details using the invoice ID."
                    },
                    {
                        "label": "Get All Invoices for a Subscription",
                        "value": "invoice.getInvoicesBySubscriptionId",
                        "description": "Get all invoices for a subscription using the subscription ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "invoice"
                        }
                    ]
                }
            }
        }
    ],
    "getInvoices": {
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter invoices created after this time.",
                    "displayName": "From",
                    "displayType": "datetime",
                    "placeholder": "Select start date and time"
                },
                "name": "from"
            },
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "outputFormat": "unix",
                        "unixUnit": "seconds",
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter invoices created before this time.",
                    "displayName": "To",
                    "displayType": "datetime",
                    "placeholder": "Select end date and time"
                },
                "name": "to"
            },
            {
                "name": "payment_id",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID (for example: pay_00001)",
                    "description": "Filter invoices by the payment ID associated with the invoice.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "receipt_id",
                "meta": {
                    "displayName": "Receipt ID",
                    "displayType": "text",
                    "placeholder": "Enter a receipt ID (for example: rcpt_00001)",
                    "description": "Filter invoices by receipt ID (the value set while creating the invoice).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "customer_id",
                "meta": {
                    "displayName": "Customer ID",
                    "displayType": "text",
                    "placeholder": "Enter a customer ID (for example: cust_00001)",
                    "description": "Filter invoices by customer ID.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            }
        ],
        "definition": {
            "method": "GET",
            "qs": {
                "payment_id": "{{parameters.payment_id}}",
                "receipt": "{{parameters.receipt_id}}",
                "customer_id": "{{parameters.customer_id}}",
                "from": "{{parameters.from}}",
                "to": "{{parameters.to}}"
            },
            "url": "https://api.razorpay.com/v1/invoices/",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "pagination": {
                "type": "offset",
                "default": {
                    "count": 100,
                    "skip": 0
                },
                "qs": {
                    "count": "{{pagination.count}}",
                    "skip": "{{pagination.skip}} + {{response.data.count}}"
                },
                "condition": "{{response.data.count}} >= 0"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "getInvoiceByInvoiceId": {
        "parameters": [
            {
                "name": "invoiceId",
                "meta": {
                    "displayName": "Invoice ID",
                    "displayType": "text",
                    "placeholder": "Enter an invoice ID (for example: inv_00001)",
                    "description": "Get an invoice by its ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices/",
            "transform": {
                "url": "function transformURL(){var invoiceId=(typeof parameters!=='undefined'&&parameters&&parameters.invoiceId!=null)?parameters.invoiceId:'{{parameters.invoiceId}}';invoiceId=String(invoiceId).trim().replace(/^\\\"|\\\"$/g,'');if(!invoiceId)throw new Error('Invalid invoiceId');return (url.endsWith('/')?url:url+'/')+encodeURIComponent(invoiceId);}return transformURL();",
                "error": "const obj = { message: error.message === 'undefined'  ? error.description : error.message, code: error && error.code != null ? error.code : null }; return obj;"
            },
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "description": "{{response.data.error.description}}",
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "getInvoicesBySubscriptionId": {
        "parameters": [
            {
                "name": "subscriptionId",
                "meta": {
                    "displayName": "Subscription ID",
                    "displayType": "text",
                    "placeholder": "Enter a subscription ID (for example: sub_00001)",
                    "description": "Get invoices for a subscription using the subscription ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "qs": {
                "subscription_id": "{{parameters.subscriptionId}}"
            },
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "pagination": {
                "type": "offset",
                "default": {
                    "count": 100,
                    "skip": 0
                },
                "qs": {
                    "count": "{{pagination.count}}",
                    "skip": "{{pagination.skip}} + {{response.data.count}}"
                },
                "condition": "{{response.data.count}} >= 0"
            },
            "response": {
                "output": "{{response.data.items}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}