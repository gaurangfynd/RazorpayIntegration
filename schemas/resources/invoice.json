{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch all invoices",
                        "value": "invoice.fetchInvoices",
                        "description": "Fetch details of all invoices."
                    },
                    {
                        "label": "Fetch invoice details by ID",
                        "value": "invoice.fetchInvoiceByInvoiceId",
                        "description": "Fetch invoice details using the invoice ID."
                    },
                    {
                        "label": "Fetch all invoices for a subscription",
                        "value": "invoice.fetchInvoicesBySubscriptionId",
                        "description": "Fetch all invoices for a subscription using the subscription ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "invoice"
                        }
                    ]
                }
            }
        }
    ],
    "fetchInvoices": {
        "parameters": [
            {
                "name": "count",
                "meta": {
                    "displayName": "Number of invoices",
                    "displayType": "number",
                    "placeholder": "Enter the number of invoices",
                    "description": "Enter the number of invoices you want to fetch. Default value is 10, maximum value is 100.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "skip",
                "meta": {
                    "displayName": "Number of invoices to skip",
                    "displayType": "number",
                    "placeholder": "Enter the number of invoices to skip",
                    "description": "Enter the number of invoices to be skipped, default value is 0.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "payment_id",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter the payment ID",
                    "description": "The unique identifier of the payment made by the customer against the invoice.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "receipt_id",
                "meta": {
                    "displayName": "Receipt ID",
                    "displayType": "text",
                    "placeholder": "Enter the receipt ID",
                    "description": "The unique receipt number that you entered for internal purpose.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "customer_id",
                "meta": {
                    "displayName": "Customer ID",
                    "displayType": "text",
                    "placeholder": "Enter the customer ID",
                    "description": "The unique identifier of the customer fetches all invoices generated for a customer",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            }
        ],
        "definition": {
            "method": "GET",
            "qs": {
                "count": "{{parameters.count}}",
                "skip": "{{parameters.skip}}",
                "payment_id": "{{parameters.payment_id}}",
                "receipt": "{{parameters.receipt_id}}",
                "customer_id": "{{parameters.customer_id}}"
            },
            "url": "https://api.razorpay.com/v1/invoices/",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "fetchInvoiceByInvoiceId": {
        "parameters": [
            {
                "name": "invoiceId",
                "meta": {
                    "displayName": "Invoice ID",
                    "displayType": "text",
                    "placeholder": "Enter an invoice ID",
                    "description": "Enter the invoice ID you want to fetch details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices/{{parameters.invoiceId}}",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "fetchInvoicesBySubscriptionId": {
        "parameters": [
            {
                "name": "subscriptionId",
                "meta": {
                    "displayName": "Subscription ID",
                    "displayType": "text",
                    "placeholder": "Enter a subscription ID",
                    "description": "Enter the subscription ID you want to fetch invoice details for.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "qs": {
                "subscription_id": "{{parameters.subscriptionId}}"
            },
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}