{
    "parameters": [
        {
            "name": "operation",
            "meta": {
                "displayName": "Operation",
                "displayType": "select",
                "placeholder": "Select an operation",
                "description": "Select the operation you want to perform.",
                "options": [
                    {
                        "label": "Fetch all invoices",
                        "value": "invoice.fetchInvoices",
                        "description": "Fetch details of all invoices."
                    },
                    {
                        "label": "Fetch invoice details by ID",
                        "value": "invoice.fetchInvoiceByInvoiceId",
                        "description": "Fetch invoice details using the invoice ID."
                    },
                    {
                        "label": "Fetch all invoices for a subscription",
                        "value": "invoice.fetchInvoicesBySubscriptionId",
                        "description": "Fetch all invoices for a subscription using the subscription ID."
                    }
                ],
                "validation": {
                    "required": true
                },
                "dependencies": {
                    "conditions": [
                        {
                            "field": "resource",
                            "operator": "EQUALS",
                            "value": "invoice"
                        }
                    ]
                }
            }
        }
    ],
    "fetchInvoices": {
        "parameters": [
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter invoices created after this time.",
                    "displayName": "From",
                    "displayType": "datetime",
                    "placeholder": "Select start date and time"
                },
                "name": "from"
            },
            {
                "meta": {
                    "htmlProps": {
                        "format": "YYYY-MM-DD HH:mm:ss",
                        "disabled": false,
                        "timeSteps": {
                            "hours": 1,
                            "minutes": 5,
                            "seconds": 5
                        }
                    },
                    "validation": {
                        "required": false
                    },
                    "description": "Filter invoices created before this time.",
                    "displayName": "To",
                    "displayType": "datetime",
                    "placeholder": "Select end date and time"
                },
                "name": "to"
            },
            {
                "name": "count",
                "meta": {
                    "displayName": "Number of invoices",
                    "displayType": "number",
                    "placeholder": "Enter count (1â€“100)",
                    "description": "Number of invoices to fetch (default: 10, max: 100).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "skip",
                "meta": {
                    "displayName": "Number of invoices to skip",
                    "displayType": "number",
                    "placeholder": "Enter offset (skip)",
                    "description": "Number of invoices to skip (offset for pagination, default: 0).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {
                        "allowDynamic": true
                    }
                }
            },
            {
                "name": "payment_id",
                "meta": {
                    "displayName": "Payment ID",
                    "displayType": "text",
                    "placeholder": "Enter a payment ID (for example: pay_00001)",
                    "description": "Filter invoices by the payment ID associated with the invoice.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "receipt_id",
                "meta": {
                    "displayName": "Receipt ID",
                    "displayType": "text",
                    "placeholder": "Enter a receipt ID (for example: rcpt_00001)",
                    "description": "Filter invoices by receipt ID (the value set while creating the invoice).",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            },
            {
                "name": "customer_id",
                "meta": {
                    "displayName": "Customer ID",
                    "displayType": "text",
                    "placeholder": "Enter a customer ID (for example: cust_00001)",
                    "description": "Filter invoices by customer ID.",
                    "validation": {
                        "required": false
                    },
                    "htmlProps": {}
                }
            }
        ],
        "definition": {
            "method": "GET",
            "qs": {
                "count": "{{parameters.count}}",
                "skip": "{{parameters.skip}}",
                "payment_id": "{{parameters.payment_id}}",
                "receipt": "{{parameters.receipt_id}}",
                "customer_id": "{{parameters.customer_id}}",
                "from": "{{parameters.from}}",
                "to": "{{parameters.to}}"
            },
            "url": "https://api.razorpay.com/v1/invoices/",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            },
            "transform": {
                "qs": "const params = { ...qs }; const fromRaw = \"{{parameters.from}}\"; const toRaw = \"{{parameters.to}}\"; const clean = v => v && v !== 'undefined' && v !== 'null' && v.trim() !== '' ? v.trim() : null; const from = clean(fromRaw); const to = clean(toRaw); if (from) { const ts = new Date(from).getTime(); if (!isNaN(ts)) params.from = Math.floor(ts / 1000); } if (to) { const ts = new Date(to).getTime(); if (!isNaN(ts)) params.to = Math.floor(ts / 1000); } return params;"
            }
        }
    },
    "fetchInvoiceByInvoiceId": {
        "parameters": [
            {
                "name": "invoiceId",
                "meta": {
                    "displayName": "Invoice ID",
                    "displayType": "text",
                    "placeholder": "Enter an invoice ID (for example: inv_00001)",
                    "description": "Fetch an invoice by its ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices/{{parameters.invoiceId}}",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.message}}",
                    "code": "{{response.status}}"
                }
            }
        }
    },
    "fetchInvoicesBySubscriptionId": {
        "parameters": [
            {
                "name": "subscriptionId",
                "meta": {
                    "displayName": "Subscription ID",
                    "displayType": "text",
                    "placeholder": "Enter a subscription ID (for example: sub_00001)",
                    "description": "Fetch invoices for a subscription using the subscription ID.",
                    "validation": {
                        "required": true
                    }
                }
            }
        ],
        "definition": {
            "qs": {
                "subscription_id": "{{parameters.subscriptionId}}"
            },
            "method": "GET",
            "url": "https://api.razorpay.com/v1/invoices",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        }
    }
}
