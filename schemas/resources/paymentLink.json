    "createPaymentLink": {
        "definition": {
            "method": "POST",
            "url": "https://api.razorpay.com/v1/payment_links",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Basic convertBufferBase64String({{secrets.client_id}}:{{secrets.client_secret}})"
            },
            "body": "{{parameters}}",
            "transform": {
                "body": "const src=(body&&typeof body==='object')?body:{};const unwrap=v=>{if(v&&typeof v==='object'){if(v.value!=null)return v.value;if(v.id!=null)return v.id;if(v.data&&v.data.value!=null)return v.data.value;if(v.data&&v.data.id!=null)return v.data.id;}return v;};const exists=v=>v!==undefined&&v!==null;const cleanStr=v=>{v=unwrap(v);if(!exists(v))return null;const s=String(v).trim();if(!s||s==='undefined'||s==='null')return null;return s;};const toBool=v=>{v=unwrap(v);if(!exists(v))return null;if(typeof v==='boolean')return v;if(v===1||v==='1')return true;if(v===0||v==='0')return false;const s=String(v).trim().toLowerCase();if(s==='true')return true;if(s==='false')return false;return null;};const toInt=v=>{v=unwrap(v);if(!exists(v))return null;const n=Number(v);if(!isFinite(n))return null;return Math.floor(n);};const toExpire=v=>{v=unwrap(v);if(!exists(v))return null;if(typeof v==='number'&&isFinite(v)){let n=Math.floor(v);if(n>1e12)n=Math.floor(n/1000);return n;}const s=String(v).trim();if(!s)return null;const num=Number(s);if(!isNaN(num)&&isFinite(num)){let n=Math.floor(num);if(n>1e12)n=Math.floor(n/1000);return n;}const ts=new Date(s).getTime();return isNaN(ts)?null:Math.floor(ts/1000);};const out={};const upi=toBool(src.upi_link);if(exists(upi))out.upi_link=upi;const amt=toInt(src.amount);if(exists(amt))out.amount=amt;const cur=cleanStr(src.currency);if(cur)out.currency=cur.toUpperCase();const ap=toBool(src.accept_partial);if(exists(ap))out.accept_partial=ap;const fmp=toInt(src.first_min_partial_amount);if(exists(fmp))out.first_min_partial_amount=fmp;const ex=toExpire(src.expire_by);if(exists(ex))out.expire_by=ex;const ref=cleanStr(src.reference_id);if(ref)out.reference_id=ref;const desc=cleanStr(src.description);if(desc)out.description=desc;const csrc=(src.customer&&typeof src.customer==='object')?src.customer:{};const cust={};const nm=cleanStr(csrc.name);if(nm)cust.name=nm;const em=cleanStr(csrc.email);if(em)cust.email=em;const ct=cleanStr(csrc.contact);if(ct)cust.contact=String(ct).replace(/\\s+/g,'');if(Object.keys(cust).length)out.customer=cust;const nsrc=(src.notify&&typeof src.notify==='object')?src.notify:{};const notif={};const ns=toBool(nsrc.sms);if(exists(ns))notif.sms=ns;const ne=toBool(nsrc.email);if(exists(ne))notif.email=ne;if(Object.keys(notif).length)out.notify=notif;const re=toBool(src.reminder_enable);if(exists(re))out.reminder_enable=re;if(src.notes&&typeof src.notes==='object')out.notes=src.notes;else{const n=cleanStr(src.notes);if(n){try{out.notes=JSON.parse(n);}catch(e){out.notes={note:n};}}}const cb=cleanStr(src.callback_url);if(cb)out.callback_url=cb;const cm=cleanStr(src.callback_method);if(cm)out.callback_method=cm.toLowerCase();return out;"
            },
            "response": {
                "output": "{{response.data}}",
                "error": {
                    "message": "{{response.data.error.description}}",
                    "code": "{{response.status}}"
                }
            }
        },
